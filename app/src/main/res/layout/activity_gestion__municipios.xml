<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Gestion_Municipios">

    <TextView
        android:id="@+id/txtTituloGestionMunicipios"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="GESTIÓN DE MUNICIPIOS"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listView_gestion_Municipios"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAniadirMunicipio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÑADIR MUNICIPIO" />
</LinearLayout>